<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client"
    android:background="@drawable/backgroudlist"
    >


    <android.support.v7.widget.RecyclerView
        android:id="@+id/client_recycle"
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="45dp"

        />

    <CheckBox
        android:id="@+id/checkBox9"
        android:layout_width="151dp"
        android:layout_height="44dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Sort by check-in"
        app:layout_constraintStart_toEndOf="@+id/checkBox8"
        app:layout_constraintTop_toBottomOf="@+id/client_recycle"

        />


    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="151dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="Sort by price"
        app:layout_constraintTop_toBottomOf="@+id/client_recycle"
        tools:layout_editor_absoluteX="16dp"

        />

    <Button
        android:id="@+id/sortBut"
        android:layout_width="160dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox8" />


</android.support.constraint.ConstraintLayout>