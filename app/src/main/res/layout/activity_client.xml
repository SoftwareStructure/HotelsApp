<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/client_recycle"
        android:layout_width="match_parent"
        android:layout_height="420sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" />

    <CheckBox
        android:id="@+id/checkBox11"
        android:layout_width="151dp"
        android:layout_height="44dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="Sort by check-out"
        app:layout_constraintStart_toEndOf="@+id/checkBox10"
        app:layout_constraintTop_toBottomOf="@+id/checkBox9" />

    <CheckBox
        android:id="@+id/checkBox10"
        android:layout_width="151dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="Sort by name"
        app:layout_constraintTop_toBottomOf="@+id/checkBox8"
        tools:layout_editor_absoluteX="16dp" />

    <CheckBox
        android:id="@+id/checkBox9"
        android:layout_width="151dp"
        android:layout_height="44dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Sort by check-in"
        app:layout_constraintStart_toEndOf="@+id/checkBox8"
        app:layout_constraintTop_toBottomOf="@+id/client_recycle" />


    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="151dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="Sort by price"
        app:layout_constraintTop_toBottomOf="@+id/client_recycle"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/sortBut"
        android:layout_width="160dp"
        android:layout_height="47dp"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/checkBox11"
        tools:layout_editor_absoluteX="112dp" />


</android.support.constraint.ConstraintLayout>