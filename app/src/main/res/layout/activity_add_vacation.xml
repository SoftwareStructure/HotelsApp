<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_vacation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVacation">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <EditText
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/add_vacation"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter Country"
        android:inputType="text"
        android:padding="4dp"
        android:textSize="23dp"
/>

    <EditText
        android:id="@+id/check_in"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/country"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        android:hint="Check in"
        android:inputType="date"
        android:padding="4dp"
        android:textSize="23dp"
    />

    <EditText
        android:id="@+id/check_out"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@+id/check_in"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"

        android:hint="Check out"
        android:inputType="date"
        android:padding="4dp"
        android:textSize="23dp"
  />
    <EditText
        android:id="@+id/Hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_out"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        android:hint="Hotel Name"
        android:inputType="text"
        android:padding="4dp"
        android:textSize="23dp"
/>

    <EditText
        android:id="@+id/Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Hotel"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        android:hint="Price in new Shekels"
        android:inputType="number"
        android:padding="4dp"
        android:textSize="23dp"
      />

    <EditText
        android:id="@+id/LocalAbroad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Price"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        android:hint="Local or abroad"
        android:inputType="text"
        android:padding="4dp"
        android:textSize="23dp"
    />

    <Button
        android:id="@+id/Add"
        android:layout_width="108dp"
        android:layout_height="67dp"
        android:layout_below="@+id/LocalAbroad"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"

        android:layout_marginBottom="78dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Add vacation"
        android:textColor="@android:color/background_light"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="449dp" />

</RelativeLayout>